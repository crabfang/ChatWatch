<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/shape_bg_round_white" >

    <ProgressBar
        android:id="@+id/dialog_waiting_progress"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/dialog_waiting_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="请稍后..."
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_waiting_progress"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_waiting_progress"
        app:layout_constraintRight_toRightOf="@+id/dialog_waiting_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>